{
  "name": "mastercard/mastercard",
  "version": "1.4.5",
  "description": "Mastercard Payment Gateway Services module for Prestashop",
  "type": "prestashop-module",
  "require": {
    "php-http/curl-client": "^2.3",
    "php-http/client-common": "^2.6",
    "guzzlehttp/psr7": "^2.6.2",
    "php-http/logger-plugin": "^1.3",
    "psr/log":"^2.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^2.0",
    "nyholm/psr7": "^1.8",
    "symfony/options-resolver": "^5.0"
  },
  "license": "Apache-2.0",
  "minimum-stability": "alpha",
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "autoload": {
    "psr-4": {
        "Fingent\\Mastercard\\Controllers\\": "controllers/",
        "Fingent\\Mastercard\\Service\\": "service/",
        "Fingent\\Mastercard\\Handlers\\": "handlers/",
        "Fingent\\Mastercard\\Model\\": "model/",
        "Fingent\\Mastercard\\Gateway\\": "gateway/",
        "Fingent\\Mastercard\\Api\\": "api/"
    }
  }

}
